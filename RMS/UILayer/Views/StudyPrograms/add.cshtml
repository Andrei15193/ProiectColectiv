@using ResourceManagementSystem.BusinessLogic.Entities;
@using ResourceManagementSystem.BusinessLogic.Workflow;

@{   
    Layout = "~/Views/Layouts/_MainLayout.cshtml";
    Page.Title = "Define Study Programs";

    string errorMessage;
}

@section body{
    <div class="well">
        @if (!IsPost)
        {
            <form action="/Views/StudyPrograms/add.cshtml" class="form-horizontal addStudyPrograms" method="post">
                <table style="width:100%;"><tr><td>
                    Educational&nbsp;Programme&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="edProgramme" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Study&nbsp;degree&nbsp;:&nbsp;</td><td style="width:100%;">
                    <select class="studyDegree">
                        <option value="0">Bachelor</option>
                        <option value="1">Master</option>
                    </select>
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Domain&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="domain" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Year&nbsp;length&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="yearLength" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Total&nbsp;Ects&nbsp;Credits&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="totalCredits" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Study&nbsp;time&nbsp;:&nbsp;</td><td style="width:100%;">
                    <select>
                        <option value="0">Full time</option>
                        <option value="1">Distance</option>
                    </select>
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Higher&nbsp;Education&nbsp;Institution&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="higherEducationInstitution" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Faculty&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="faculty" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                    Contact&nbsp;Person&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="contactPerson" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Phone&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="phone" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Fax&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="fax" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Email&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="email" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                    Profile&nbsp;Of&nbsp;The&nbsp;Degree&nbsp;Programme&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="profileOfTheDegreeProgramme" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   TargetGroups&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="targetGroups" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                    Entrance&nbsp;Conditions&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="entranceConditions" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Further&nbsp;Education&nbsp;Possibilities&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="furtherEducationPosssibilities" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Description&nbsp;Of&nbsp;Study&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="descriptionOfStudy" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Purposes&nbsp;Of&nbsp;The&nbsp;Programme&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="purposesOfTheProgramme" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Area&nbsp;Of&nbsp;Expertise&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="areaOfExpertise " />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Extra&nbsp;Peculiarities&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="extraPeculiarities" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Practical&nbsp;Training&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="practicalTraining" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Final&nbsp;Examinations&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="finalExaminations" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Gained&nbsp;Abilities&nbsp;And&nbsp;Skills&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="gainedAbilitiesAndSkills" />
                </td></tr></table>

                                <table style="width:100%;"><tr><td>
                   Potential&nbsp;Field&nbsp;Of&nbsp;Professional&nbsp;Activity&nbsp;:&nbsp;</td><td style="width:100%;">
                    <input type="text" class="potential Field Of Professional Activity" />
                </td></tr></table>

                <div class="pull-right">
                    <input class="btn" type="submit" value="Add" />
                </div>
            </form>
        }
        else
        {
            <h2>ASd</h2>
        }
        <div style="clear:both;"></div>
    </div>
}
